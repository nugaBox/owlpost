# OwlPost - Comin Mail
# 환경 모드: production | development
NODE_ENV=development

# 로그 레벨: error | warn | info | debug
# production 모드일 때 기본값: warn
# develop 모드일 때 기본값: debug
LOG_LEVEL=debug

# 애플리케이션 설정
APP_NAME=owlpost
APP_VERSION=0.0.1
APP_URL=http://localhost:3000

# PostgreSQL 데이터베이스
DATABASE_URL=postgresql://owlpost:owlpost_password@postgres:5432/owlpost?schema=public
POSTGRES_USER=owlpost
POSTGRES_PASSWORD=owlpost_password
POSTGRES_DB=owlpost

# Redis (선택사항)
REDIS_URL=redis://redis:6379
REDIS_ENABLED=true

# NextAuth 설정
NEXTAUTH_URL=http://localhost:3000
NEXTAUTH_SECRET=your-secret-key-change-this-in-production

# OAuth SSO 설정
OAUTH_ENABLED=true
OAUTH_PROVIDER=your-oauth-provider
OAUTH_CLIENT_ID=your-client-id
OAUTH_CLIENT_SECRET=your-client-secret
OAUTH_AUTHORIZATION_URL=https://your-oauth-provider.com/authorize
OAUTH_TOKEN_URL=https://your-oauth-provider.com/token
OAUTH_USERINFO_URL=https://your-oauth-provider.com/userinfo

# 클라이언트용 환경 변수 (NEXT_PUBLIC_ 접두사 필요)
NEXT_PUBLIC_OAUTH_ENABLED=true
NEXT_PUBLIC_OAUTH_PROVIDER=your-oauth-provider

# Stalwart Mail 서버 설정
STALWART_IMAP_HOST=stalwart-mail
STALWART_IMAP_PORT=143
STALWART_IMAP_SECURE=false
STALWART_SMTP_HOST=stalwart-mail
STALWART_SMTP_PORT=25
STALWART_SMTP_SECURE=false
STALWART_JMAP_URL=http://stalwart-mail:8080/jmap

# MinIO 설정 (첨부파일 저장소)
MINIO_ENDPOINT=minio
MINIO_PORT=9000
MINIO_USE_SSL=false
MINIO_ACCESS_KEY=minioadmin
MINIO_SECRET_KEY=minioadmin
MINIO_BUCKET_NAME=owlpost-attachments

# 한국 시간대
TZ=Asia/Seoul

